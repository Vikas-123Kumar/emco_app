<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/all_backgroun"
        tools:context=".screens.ActivityUpdatePassword">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:visibility="visible"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            android:text="@string/verify_account"
            android:textColor="@color/white"
            android:textSize="@dimen/_16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnforgetpassword"
            android:layout_below="@id/imgBack"
            android:layout_marginBottom="@dimen/_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_otp_verify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:id="@+id/ll_otp_view"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="@dimen/_25dp"
                        android:layout_marginTop="@dimen/_40dp"
                        android:layout_marginEnd="@dimen/_25dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/otpEditText1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_back_register"
                            android:ems="1"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:maxLength="1" />

                        <EditText
                            android:id="@+id/otpEditText2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_back_register"
                            android:ems="1"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:maxLength="1" />

                        <EditText
                            android:id="@+id/otpEditText3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_back_register"
                            android:ems="1"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1" />

                        <EditText
                            android:id="@+id/otpEditText4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_back_register"
                            android:ems="1"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:maxLength="1" />

                        <EditText
                            android:id="@+id/otpEditText5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_back_register"
                            android:ems="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:inputType="number"
                            android:maxLength="1" />

                        <EditText
                            android:id="@+id/otpEditText6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_back_register"
                            android:ems="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:inputType="number"
                            android:maxLength="1" />
                    </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50dp"
                        android:gravity="center"
                        android:text="Haven't received OTP?"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16dp" />

                    <TextView
                        android:id="@+id/txt_otp_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_update_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginTop="@dimen/_30dp"
                        android:text="@string/new_password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sp" />

                    <EditText
                        android:id="@+id/edtNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50dp"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_30dp"
                        android:background="@drawable/edt_back_register"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/_15dp"
                        android:textColor="@color/white"
                        android:textColorHint="#575769"
                        android:textSize="@dimen/_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginTop="@dimen/_30dp"
                        android:text="@string/confirm_password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sp" />

                    <EditText
                        android:id="@+id/edtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50dp"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_30dp"
                        android:background="@drawable/edt_back_register"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/_15dp"
                        android:textColor="@color/white"
                        android:textColorHint="#575769"
                        android:textSize="@dimen/_14sp" />
                </LinearLayout>
            </LinearLayout>


        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnforgetpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_50dp"
            android:layout_marginEnd="@dimen/_50dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:background="@drawable/button_background"
            android:text="@string/continuesignup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15dp" />
    </RelativeLayout>
</layout>
