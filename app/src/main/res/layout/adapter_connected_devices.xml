<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/device_count_card_back"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/mg_5">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:background="@drawable/circle_back"
            android:gravity="center">

            <ImageView
                android:id="@+id/device_images"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/sprinkler_red" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                android:text="Sprinklers"
                android:textColor="@color/white"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txt_device_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:drawableStart="@drawable/green_dot"
                android:drawablePadding="@dimen/_10dp"
                android:text="@string/connected"
                android:textColor="@color/white">

            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_forward"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:src="@drawable/forward_icon" />

    </LinearLayout>
</RelativeLayout>